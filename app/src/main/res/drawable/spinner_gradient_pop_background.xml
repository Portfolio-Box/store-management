<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:endColor="#2196F3"
                android:startColor="#03125C"
                android:type="linear"/>

            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#71B5E7"
                android:endColor="#C1E9F1"

                android:type="linear" />

            <size
                android:width="30dp"
                android:height="30dp" />
        </shape>
    </item>
    <item >
        <bitmap android:gravity="bottom|right"
            android:src="@android:drawable/arrow_up_float" />
    </item>

</layer-list>